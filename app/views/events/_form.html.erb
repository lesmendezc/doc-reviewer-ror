<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="input-field col s6">
    <%= form.label :semester, 'Semestre', class: 'active' %>
    <%= form.select :semester, ['Primer','Segundo'], include_blank: true %>
  </div>

  <div class="input-field col s6">
    <%= form.label :year, 'Año', class: 'active' %>
    <%= form.select :year, ['2018','2019','2020','2021','2022','2023'] %>
  </div>
</div>

<div class="row">
  <div class="input-field col s6">
    <%= form.label :name, 'Nombre del evento' %>
    <%= form.text_field :name, class: "validate" %>
  </div>
  <div class="input-field col s6">
    <%= form.label :career, 'Carrera', class: 'active' %>
    <%= form.select :career, ['Ing. Sistemas', 'Ing. Ambiental', 'Ing. Civil', 'Ing. Mecatronica'], include_blank: true %>
  </div>
</div>


  <div class="input-field">
    <%= form.label :limit_date, 'Fecha límite de recepción de documentos' %>
    <%= form.text_field :limit_date, class: "datepicker" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
