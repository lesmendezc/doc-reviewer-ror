<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card-panel brown lighten-5">
      <div class="row valign-wrapper">
        <div class="col s12">
          <h4 align="center">
            <i class="material-icons prefix">note_add</i>
            Nuevo Documento
          </h4>


          <%= form_for([@event, @paper]) do |form| %>
            <div class="row">
              <div class="input-field">
                <%= form.label :title, 'Título *' %>
                <%= form.text_area :title, class: "materialize-textarea" %>
              </div>
            </div>

            <div class="row">
              <div class="input-field">
                <%= form.label :google_docs_link, 'Link archivo Google Docs' %>
                <%= form.text_field :google_docs_link, class: 'validate' %>
              </div>
            </div>

            <div class="row">
              <div class="file-field input-field">
                <div class="btn blue lighten-2">
                  <span><i class="material-icons">picture_as_pdf</i></span>
                  <%= form.file_field :pdf_file, {accept: "application/pdf" } %>
                </div>
                <div class="file-path-wrapper">
                  <input type="text" class="file-path validate" placeholder="Elija un archivo *">
                </div>
              </div>
            </div>

            <div class="row">
              <div class="input-field">
                <%= form.label :resume, 'Introducción' %>
                <%= form.text_area :resume, :class => 'materialize-textarea' %>
              </div>
            </div>

            <div class="row">
              <div class="input-field">
                <%= form.label :problem_definition, 'Formulación del problema *' %>
                <%= form.text_area :problem_definition, class: "materialize-textarea" %>
              </div>
            </div>

            <div class="row">
              <div class="input-field">
                <%= form.label :general_purpose, 'Objetivo general *' %>
                <%= form.text_area :general_purpose, :class => 'materialize-textarea' %>
              </div>
            </div>

            <div class="row">
              <div class="input-field">
                <%= form.label :specific_purpose, 'Objetivos específicos *' %>
                <%= form.text_area :specific_purpose, class: "materialize-textarea" %>
              </div>
            </div>


            <div class="row">
              <div class="input-field">
                <%= form.label :tag_list, 'Palabras clave', class: "active" %>
                <%= form.text_field :tag_list, placeholder: "Separar con una coma...", type: "text", class: "validate" %>
              </div>
            </div>

            <%= form.hidden_field :user_id, value: current_user.id %>

            <div class="center-align">
              <%= button_tag(class: "btn-small waves-effect waves-light") do %>
                Registrar
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<br><br><br>
