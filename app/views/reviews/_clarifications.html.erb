<% @reviews.each do |review| %>
    <table class="review-show">
        <tr class="paper-title">
            <td colspan="2">
                <strong>Revisi√≥n <%= review.id %> - <%= review.user.complete_name %></strong>
            </td>
        </tr>
        <% review.qualitative_evaluations.each do |evaluation| %>
            <tr class="thin-row">
                <th><%= evaluation.question.title %></th>
