<div class="row">
    <div class="col s12 m10 offset-m1">
        <div class="card c-form">
            <div class="card-content">
                <div>
                    <% @review.errors.full_messages.each do |message| %>
                        <%= message %>
                    <%end%>
                </div>
                <span class="card-title"><%= @survey.name %></span>
                <%= form_for([@event, @paper, @review]) do |review_form| %>

                    <%= hidden_field_tag :user_id, value: current_user.id %>
                    <%= hidden_field_tag :survey_id, value: @survey_id %>

                    <% @survey.questions.each do |question|%>
                        <%# <br><div class="divider"></div> %>
                        <div class="center-align"> * * * </div>
                        <h5><%= question.description %> (*)</h5>
                        <% if question.type == 'Questions::SelectOption' %>
                            <div class="input-field col s12">
                            <% question.options.each do |option|%>
                                <p><label>
                                    <%= radio_button_tag :relevance, option.show, class: 'with-gap' %>
                                    <span><%= option.show %></span>
                                </label></p>
                            <% end %>
                            </div>
                        <% elsif question.type == 'Questions::Text' %>
                            <span><%= question.title %></span><br>
                            <div class="input-field col s12">
                                <trix-editor input="general_text"></trix-editor>
                            </div>
                            <p>o</p>
                            <div class="input-field col s12">
                                <%= label_tag :personal_message, 'Escriba la evaulación de la pregunta acá' %>
                                <%= text_area_tag :personal_message, '', class: 'materialize-textarea' %>
                            </div>
                        <% end %>
                    <% end %>

                    <div class="center-align">
                        <%= button_tag(class: "btn-small waves-effect waves-light") do %>
                            Realizar revisión
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>